/* Nav principal */
.nav-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 1rem 2rem;
  border-bottom: 2px solid #222A3E; /* color oscuro en lugar de var(--color-primary) */
  font-family: var(--font-archivo-black);
}

/* Links nav */
.nav-link {
  color: #222A3E; /* color oscuro para texto */
  font-weight: 700;
  text-decoration: none;
  font-size: 1.2rem;
  position: relative;
  padding: 0.2rem 0;
  transition: color 0.3s ease;
}

.nav-link::after {
  content: "";
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0;
  height: 2px;
  background-color: #c2185b; /* color decorativo para línea */
  transition: width 0.3s ease;
}

.nav-link:hover,
.nav-link:focus {
  color: #c2185b; /* color decorativo para texto al hover */
}

.nav-link:hover::after,
.nav-link:focus::after {
  width: 100%;
}

    .nav-link:hover::after,
    .nav-link:focus::after {
      width: 100%;
    }
  
    /* Botón turnos */
    .btn-turnos {
      background-color: #c2185b;
      color: white;
      font-weight: 700;
      border: none;
      padding: 0.6rem 1.2rem;
      cursor: pointer;
      font-size: 1rem;
      border-radius: 0;
      transition: background-color 0.3s ease;
    }
  
    .btn-turnos:hover,
    .btn-turnos:focus {
      background-color: #a01349;
    }

  </style>